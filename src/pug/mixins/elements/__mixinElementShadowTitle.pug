//- Mixin element shadowTitle
//- ====================================================================================================================


mixin addShadowTitle(titleText, titleClass)
	- titleText = titleText || "TITLE"

	if titleClass
		- var noClass = `${pageClass}-${titleClass}`
	else
		- var noClass = ""

	div(class=`${pageClass}-title ${noClass}`)
		span(data-shadow=titleText)
			= titleText